{
  "openapi": "3.0.0",
  "info": {
    "title": "Gamery js",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development"
    },
    {
      "url": "https://web-gamery.herokuapp.com",
      "description": "Production"
    }
  ],
  "components": {
    "securitySchemes": {
      "userAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
    },
    "requestBodies": {
      "registration_body": {
        "type": "object",
        "properties": {
          "uuid": {
            "type": "string",
            "description": "uuid del dispositivo in cui si sta giocando"
          },
          "username": {
            "type": "string",
            "description": "username del giocatore"
          },
          "email": {
            "type": "string",
            "description": "email del giocatore"
          },
          "password": {
            "type": "string",
            "description": "Password dell'utente"
          }
        }
      },
      "login_body": {
        "type": "object",
        "properties": {
          "usernameEmail": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "change_password_body": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string"
          },
          "passwordConfirm": {
            "type": "string"
          }
        }
      },
      "change_password_email_body": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "setting_body": {
        "type": "object",
        "properties": {
          "font_size": {
            "type": "number"
          },
          "volume": {
            "type": "number"
          },
          "sound": {
            "type": "boolean"
          }
        }
      },
      "change_country_body": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "game_body": {
        "type": "object",
        "properties": {
          "words": {
            "type": "array",
            "item": "string"
          },
          "game_time": {
            "type": "number"
          }
        }
      }
    }
  },
  "paths": {

  }
}
