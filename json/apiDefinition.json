{
  "openapi": "3.0.0",
  "info": {
    "title": "Gamery js",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development"
    },
    {
      "url": "https://web-gamery.herokuapp.com",
      "description": "Production"
    }
  ],
  "components": {
    "securitySchemes": {
      "userAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {

    },
    "requestBodies": {
      "client": {
        "login": {
          "description": "Dati per effettuare il login",
          "require": true,
          "content": {
            "application\\json": {
              "schema": {
                "oneOf": {
                  "temporary": {
                    "type": "object",
                    "properties": {
                      "uuid": {
                        "type": "string"
                      }
                    }
                  },
                  "credentials": {
                    "type": "object",
                    "properties": {
                      "usernameEmail": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "example": {
                "uuid": "00000000-0000-0000-0000-000000000000"
              }
            }
          }
        }
      },
      "registration_body": {
        "type": "object",
        "required": true,
        "properties": {
          "uuid": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "change_password_body": {
        "type": "object",
        "required": true,
        "properties": {
          "password": {
            "type": "string"
          },
          "passwordConfirm": {
            "type": "string"
          }
        }
      },
      "change_password_email_body": {
        "type": "object",
        "required": true,
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "setting_body": {
        "type": "object",
        "required": true,
        "properties": {
          "font_size": {
            "type": "number"
          },
          "volume": {
            "type": "number"
          },
          "sound": {
            "type": "boolean"
          }
        }
      },
      "change_country_body": {
        "type": "object",
        "required": true,
        "properties": {
          "id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "game_body": {
        "type": "object",
        "required": true,
        "properties": {
          "words": {
            "type": "array",
            "item": "string"
          },
          "game_time": {
            "type": "number"
          }
        }
      }
    },
    "responses": {
      "client": {
        "login": {
          "type": "object",
          "properties": {
            "access": {
              "type": "string",
              "example": "token di accesso"
            },
            "uuid": {
              "type": "string",
              "example": "uuid per l'utente"
            }
          }
        },
        "user": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string",
              "example": "0000000getihogtehiej"
            },
            "username": {
              "type": "string",
              "example": "Player2"
            },
            "uuid": {
              "type": "string",
              "example": "uuid dell'utente"
            },
            "active": {
              "type": "boolean",
              "example": "true"
            },
            "createdAt": {
              "type": "string",
              "example": "2022-05-30T16:41:49.997Z"
            },
            "updatedAt": {
              "type": "string",
              "example": "2022-05-30T16:41:49.997Z"
            },
            "settings": {
              "type": "object",
              "properties": {
                "font_size": {
                  "type": "number",
                  "example": "15"
                },
                "volume": {
                  "type": "number",
                  "example": "8"
                },
                "sound": {
                  "type": "boolean",
                  "example": "true"
                }
              }
            },
            "preferences": {
              "type": "object",
              "properties": {
                "language": {
                  "type": "number",
                  "example": "1"
                },
                "color_icon": {
                  "type": "array",
                  "item": "string",
                  "example": "#2AF39A,#2AF39A"
                },
                "orientation_icon": {
                  "type": "number",
                  "example": "0"
                }
              }
            },
            "statistics": {
              "type": "object",
              "properties": {
                "game_time": {
                  "type": "number",
                  "example": "320"
                },
                "tot_games": {
                  "type": "number",
                  "example": "11"
                },
                "tot_points": {
                  "type": "number",
                  "example": "123"
                },
                "max_points": {
                  "type": "number",
                  "example": "4"
                }
              }
            },
            "country": {
              "_id": {
                "type": "string"
              },
              "_code": {
                "type": "string"
              },
              "_name": {
                "type": "string"
              },
              "_createdAt": {
                "type": "string"
              },
              "_updatedAt": {
                "type": "string"
              }
            }
          }
        },
        "simple_user": {
          "type": "object",
          "properties": {
            "_id": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "statistics": {
              "type": "object",
              "properties": {
                "game_time": {
                  "type": "number"
                },
                "tot_games": {
                  "type": "number"
                },
                "tot_points": {
                  "type": "number"
                },
                "max_points": {
                  "type": "number"
                }
              }
            },
            "country": {
              "_id": {
                "type": "string"
              },
              "_code": {
                "type": "string"
              },
              "_name": {
                "type": "string"
              },
              "_createdAt": {
                "type": "string"
              },
              "_updatedAt": {
                "type": "string"
              }
            }
          }
        }
      },
      "country": {
        "allCountry": {
          "type": "object",
          "properties": {
            "type": "array",
            "item": {
              "type": "object",
              "properties": {
                "_id": {
                  "type": "string"
                },
                "_code": {
                  "type": "string"
                },
                "_name": {
                  "type": "string"
                },
                "_createdAt": {
                  "type": "string"
                },
                "_updatedAt": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "game": {

      },
      "bad_request": {
        "description": "Errore durante l'esecuzione dell'azione",
        "content": {
          "application\\json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            },
            "example": {
              "error": "Descrizione dell'errore riscontrato"
            }
          }
        }
      }
    }
  },
  "paths": {

  }
}
