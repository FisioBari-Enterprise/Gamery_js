{
  "openapi": "3.0.0",
  "info": {
    "title": "Gamery js",
    "version": "0.1"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development"
    },
    {
      "url": "https://web-gamery.herokuapp.com",
      "description": "Production"
    }
  ],
  "components": {
    "securitySchemes": {
      "userAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {

    },
    "requestBodies": {
      "registration_body": {
        "type": "object",
        "required": true,
        "properties": {
          "uuid": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "login_body": {
        "type": "object",
        "required": true,
        "properties": {
          "usernameEmail": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "change_password_body": {
        "type": "object",
        "required": true,
        "properties": {
          "password": {
            "type": "string"
          },
          "passwordConfirm": {
            "type": "string"
          }
        }
      },
      "change_password_email_body": {
        "type": "object",
        "required": true,
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "setting_body": {
        "type": "object",
        "required": true,
        "properties": {
          "font_size": {
            "type": "number"
          },
          "volume": {
            "type": "number"
          },
          "sound": {
            "type": "boolean"
          }
        }
      },
      "change_country_body": {
        "type": "object",
        "required": true,
        "properties": {
          "id": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      },
      "game_body": {
        "type": "object",
        "required": true,
        "properties": {
          "words": {
            "type": "array",
            "item": "string"
          },
          "game_time": {
            "type": "number"
          }
        }
      }
    },
    "responses": {
      "login_response": {
        "type" : "object",
        "properties": {
          "access": {
            "type": "string",
            "example" : "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYyOTRmM2NkMDY2NmRjZWVhMTVhMWQxZSIsImlhdCI6MTY1NDQxNTgyMiwiZXhwIjoxNjU0NDIzMDIyfQ.WB5UMCcLA-AH8cnngWj4DguOzbmG4FrYvJCGUXFvXO8"
          },
          "uuid": {
            "type": "string",
            "example": "14c01601-99d6-44e4-8042-e5d614ea8867"
          }
        }
      }
    }
  },
  "paths": {

  }
}
